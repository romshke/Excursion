<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/waypoint_autocomplete_row_name"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:text="@string/layout_list_item_sight_name"
            android:textSize="18sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waypoint_autocomplete_row_address"
            android:textSize="14sp"
            android:layout_below="@+id/waypoint_autocomplete_row_name"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:text="@string/layout_list_item_sight_address"/>

    </LinearLayout>

</RelativeLayout>